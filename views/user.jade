extends layout

block content
   div.content_book
      h2 Read Books
      div.list_books
       each book in books
          ul
            li
             span Title:&nbsp
             =book.name
            li
             span Description:&nbsp
             =book.phone
            li
             span Author:&nbsp
             =book.email
            li
             span ID:&nbsp
             =book._id
